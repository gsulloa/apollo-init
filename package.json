{
  "name": "apollo-init",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Gabriel Ulloa <gabriel.ulloa.e+dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node index",
    "dev": "nodemon -e js,json,graphql",
    "debug": "nodemon --inspect -e js,json,graphql",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:create": "sequelize db:create",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "db:drop": "sequelize db:drop",
    "db:setup": "yarn db:create && yarn db:migrate && yarn db:seed",
    "db:reset": "yarn db:drop && yarn db:setup"
  },
  "dependencies": {
    "apollo-server": "^2.9.0",
    "graphql": "^14.5.3",
    "merge-graphql-schemas": "^1.7.3",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.17.0"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.19.1",
    "sequelize-cli": "^5.5.0"
  }
}
